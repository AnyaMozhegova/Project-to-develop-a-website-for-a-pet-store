@model IEnumerable<ShopForPerts.Data.Models.EndOfShift>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
}
@if (HttpContextAccessor.HttpContext.Session.GetString("ManagerId") != null)
{
    <div class="row">
        <div class="col-md-8 offset-md">
            <h1>Passbook</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.collection)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cashless)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cash)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.banknote5000)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bankote1000)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bankote500)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bankote100)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bankote50)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bankoteSmall)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.refund)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.seller1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.seller2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.day)
                        </th>
                        <th>
                            <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                                <i class="fa-solid fa-plus"></i> New
                            </a>
                        </th>
                        <a asp-controller="Home" asp-action="Chart">Chart</a>

                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.collection)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cashless)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cash)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.banknote5000)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankote1000)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankote500)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankote100)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankote50)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bankoteSmall)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.seller1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.seller2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.day)
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.id">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="AddOrEdit" asp-route-id="@item.id" class="btn btn-warning">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Are you sure to delete this record?')">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
