@model ShopForPerts.Data.Models.Product

@{
    ViewData["Title"] = "Product";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Продукты</h1>
        <form asp-action="AddOrEdit" autocomplete="off">


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDes" class="control-label"></label>
                <input asp-for="ShortDes" class="form-control" />
                <span asp-validation-for="ShortDes" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="LongDes" class="control-label"></label>
                <input asp-for="LongDes" class="form-control" />
                <span asp-validation-for="LongDes" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" />
                <span asp-validation-for="image" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="isFavourite" class="control-label"></label>
                <input asp-for="isFavourite" class="form-control" />
                <span asp-validation-for="isFavourite" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Available" class="control-label"></label>
                <input asp-for="Available" class="form-control" />
                <span asp-validation-for="Available" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>

            </div>





            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary  w-100">View All</a>
                </div>
            </div>
        </form>
    </div>
</div>


